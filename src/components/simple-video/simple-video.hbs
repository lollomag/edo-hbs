<div class="simple-video">
  {{#if id}}
    <a data-toggle="modal" data-target="#modal-video" data-id="{{id}}" class="preview">
      <img src="{{cover}}" alt="">
      <span class="icon material-icons-outlined">play_circle_outline</span>
    </a>
  {{else}}
    <div class="preview">
      <img src="{{cover}}" alt="">
      <span class="icon material-icons-outlined">movie</span>
    </div>
  {{/if}}
  <h2 class="title">{{title}}</h2>
</div>